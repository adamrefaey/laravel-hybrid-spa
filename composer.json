{
    "name": "mustafarefaey/laravel-hybrid-architecture-response-helpers",
    "description": "Laravel hybrid-architecture response helpers.",
    "keywords": [
        "laravel",
        "response",
        "laravel-hybrid-architecture-response-helpers",
        "mustafarefaey"
    ],
    "homepage": "https://github.com/mustafarefaey/laravel-hybrid-architecture-response-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Mustafa Refaey",
            "email": "mustafarefaey@gmail.com",
            "homepage": "https://www.linkedin.com/in/mustafarefaey",
            "role": "Author"
        }
    ],
    "require": {
        "php": "^7.3|^7.4",
        "illuminate/contracts": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "MustafaRefaey\\LaravelHybrid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MustafaRefaey\\LaravelHybrid\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MustafaRefaey\\LaravelHybrid\\LaravelHybridServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
